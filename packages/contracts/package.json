{
  "name": "contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile",
    "coverage": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat coverage",
    "gas": "REPORT_GAS=true npx hardhat test",
    "size": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat size-contracts",
    "test": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat test",
    "abi": "npx hardhat export-abi --no-compile",
    "pow:rinkeby:deploy": "npx hardhat run --network rinkeby scripts/deploy-pow.ts",
    "proof:rinkeby:deploy": "npx hardhat run --network rinkeby scripts/deploy-proof.ts",
    "pow:matic:deploy": "ENV=prod npx hardhat run --network matic scripts/deploy-pow.ts",
    "proof:matic:deploy": "ENV=prod npx hardhat run --network matic scripts/deploy-proof.ts",
    "console:rinkeby": "npx hardhat console --network rinkeby",
    "console:matic": "ENV=prod npx hardhat console --network matic",
    "account:rinkeby": "npx hardhat run --network rinkeby scripts/check-deploy-account.ts",
    "account:matic": "npx hardhat run --network matic scripts/check-deploy-account.ts",
    "txreceipt:matic": "npx hardhat run --network matic scripts/check-tx-receipt.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-abi-exporter": "^2.7.2",
    "hardhat-contract-sizer": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.12.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.4.1"
  }
}
